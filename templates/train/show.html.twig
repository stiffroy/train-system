{% extends 'base.html.twig' %}

{% block title %}Trains Show{% endblock %}

{% block body %}
    <h3 class="text-center">Train details</h3>
    <h4 class="text-center">{{ train.name }}</h4>

    <br />

    <table class="table table-hover">
        <thead>
        </thead>
        <tbody>
        {% for key, element in extraInfo %}
            <tr>
                <th scope="row">{{ key }}</th>
                <td>{{ element }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
