{% extends 'base.html.twig' %}

{% block title %}Wagons List{% endblock %}

{% block body %}
    {% if wagons %}
        <div class="float-end">
            <a href="{{ path('wagons_create') }}">Create New</a>
        </div>
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Serial No</th>
                <th scope="col">Manufacturer</th>
                <th scope="col">Type</th>
                <th scope="col">Max Passenger</th>
                <th scope="col">Max Goods Weight</th>
                <th scope="col">Length</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for wagon in wagons %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td>{{ wagon.serialNo }}</td>
                    <td>{{ wagon.manufacturer }}</td>
                    <td>{{ wagon.type.value }}</td>
                    <td>{{ wagon.maxPassenger }}</td>
                    <td>{{ wagon.maxGoodsWeight }}</td>
                    <td>{{ wagon.length }}</td>
                    <td>
                        <a href="{{ path('wagons_show', {id: wagon.id}) }}" >Show</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <h3 class="text-center">Sorry, no wagon found</h3>
    {% endif %}
{% endblock %}
