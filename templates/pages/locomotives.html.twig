{% extends 'base.html.twig' %}

{% block title %}Trains List{% endblock %}

{% block body %}
    {% if locomotives %}
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Serial No</th>
                <th scope="col">Manufacturer</th>
                <th scope="col">Propulsion Type</th>
                <th scope="col">Pulling Power</th>
                <th scope="col">Max Passenger</th>
                <th scope="col">Max Payload</th>
                <th scope="col">Length</th>
            </tr>
            </thead>
            <tbody>
            {% for locomotive in locomotives %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td>{{ locomotive.serialNo }}</td>
                    <td>{{ locomotive.manufacturer }}</td>
                    <td>{{ locomotive.propulsionType.value }}</td>
                    <td>{{ locomotive.pullingPower }}</td>
                    <td>{{ locomotive.maxPessenger }}</td>
                    <td>{{ locomotive.maxPayload }}</td>
                    <td>{{ locomotive.length }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <h3 class="text-center">Sorry, no locomotive found</h3>
    {% endif %}
{% endblock %}
